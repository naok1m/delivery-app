<BorderPane prefHeight="450.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.DeliveryUIController">
    <left>
        <VBox alignment="TOP_CENTER" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="restauranteNomeLabel" text="[Nome do Restaurante]">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>

                <Label text="CardÃ¡pio">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>
                <ListView fx:id="menuListView" prefHeight="300.0" prefWidth="300.0" />
                <Button mnemonicParsing="false" onAction="#adicionarAoCarrinho" text="Adicionar ao Carrinho" />
            </children>
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
        </VBox>
    </left>
    <center>
        <VBox alignment="TOP_CENTER" spacing="10.0" style="-fx-border-color: #ccc; -fx-border-width: 0 0 0 1;" BorderPane.alignment="CENTER">
            <children>
                <Label text="Meu Carrinho">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <ListView fx:id="carrinhoListView" prefHeight="300.0" prefWidth="300.0" />
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#removerDoCarrinho" text="Remover Item" />
                        <Button mnemonicParsing="false" onAction="#finalizarPedido" style="-fx-base: #4CAF50;" text="Finalizar Pedido" />
                    </children>
                </HBox>
                <Label fx:id="totalLabel" text="Total: R$ 0.00">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
            </children>
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
        </VBox>
    </center>
</BorderPane>