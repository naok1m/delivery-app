<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="400.0" prefWidth="350.0" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.RestauranteController">
    <children>
        <Label fx:id="welcomeLabel" text="Olá, [Cliente]!">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
        <Label text="Escolha um restaurante para pedir:">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <ListView fx:id="restauranteListView" prefHeight="280.0" prefWidth="320.0" />
        <Button mnemonicParsing="false" onAction="#handleSelecionarRestaurante" text="Ver Cardápio" />

        <Button mnemonicParsing="false" onAction="#handleLogoutButtonAction" text="Logout (Voltar)" style="-fx-background-color: transparent; -fx-text-fill: #888;" />

        <Label fx:id="statusLabel" textFill="RED" />
    </children>
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
    </padding>
</VBox>